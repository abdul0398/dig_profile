<%if(currentUser.role == "admin"){%>
  <script>
    async function fetchClientDetails(clientid){
        const res = await fetch(`/api/getClient/${clientid}`,{
            method:"GET"
        })
        const data = await res.json();
        return data;
    }
    async function fetchprofileDetails(profileid){
        const res = await fetch(`/api/profile/fetch/analytics/${profileid}`,{
            method:"GET"
        })
        const data = await res.json();
        return data;
    }
  
  
    document.getElementById("client_dropdown").addEventListener("change", async ()=>{
      document.getElementById("profile_dropdown").innerHTML = "";
      let client_id = document.getElementById("client_dropdown").value;
      const data = await fetchClientDetails(client_id);
      profiles = data.profiles;
      links = data.links;
      if(!profiles || profiles.length == 0){
        document.getElementById("profile_dropdown").innerHTML += `<option selected disabled> No Profiles</option>`
      }else{
        document.getElementById("profile_dropdown").innerHTML += `<option disabled selected >Select Profile</option>`
        for(let i = 0; i < profiles.length; i++){
          document.getElementById("profile_dropdown").innerHTML += `<option value="${profiles[i].id}">${profiles[i].name}</option>`
        }
      }
    })
  
    document.getElementById("profile_dropdown").addEventListener("change", async ()=>{
      const profileId = document.getElementById("profile_dropdown").value;
      const profileName = document.getElementById("profile_dropdown").options[document.getElementById("profile_dropdown").selectedIndex].text;
      document.getElementById("profile_name").innerHTML = profileName;
      document.getElementById("analytics_body").innerHTML = "";
      const {profile, links, forms} = await fetchprofileDetails(profileId);

      document.getElementById("profile_clicks").innerHTML = profile.views + " views";
      const profile_links = links.filter(link => link.type == "link");
      
      for(let i = 0; i < profile_links.length; i++){
        document.getElementById("analytics_body").innerHTML += `
        <tr>
          <td>
            <div class="d-flex px-2 py-1">
              <div class="d-flex flex-column justify-content-center">
                <h6 class="mb-0 text-sm">${profile_links[i].name}</h6>
              </div>
            </div>
          </td>
          <td>
            <p class="text-m font-weight-bold mb-0">${profile_links[i].click_count}</p>
          </td>
        </tr>
        `
      }
  
    })
  
  
  </script>
