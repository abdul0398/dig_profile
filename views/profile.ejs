  <script>
    const overlay = document.getElementById("overlay");
      overlay.addEventListener("click", () => {
          closeAllPopups();
          overlay.style.display = "none";
    });
    document.getElementById("btn_add_user").addEventListener("click", function(){
      document.querySelector(".useradd-popup").classList.add("open_popup");
      document.querySelector(".useradd-popup").classList.remove("close_popup");
      overlay.style.display = "block";
    })


    function showLoadingOverlay() {
        const overlay = document.querySelector('.overlay_loading');
        overlay.style.display = 'block';
    }
    function hideLoadingOverlay() {
        const overlay = document.querySelector('.overlay_loading');
        overlay.style.display = 'none';
    }



    function closeAllPopups() {
        let openPopups = document.querySelectorAll('.open_popup');
        openPopups.forEach(function(element) {
            element.classList.remove('open_popup');
            element.classList.add('close_popup');
        }); 
        overlay.style.display = "none";
    }


    async function AddUser() {
        showLoadingOverlay();
        let username = document.getElementById('username').value;
        let password = document.getElementById('password').value;
        let confirm_password = document.getElementById('confirm_password').value;

        // Validate passwords match
        if(!validateForm()){
          hideLoadingOverlay();
          return;
        }

        // Prepare data for API
        let data = {
          username: username,
          password: password
        };
        console.log(data);;
         const res = await fetch('/create-user', {
            method: 'POST',
            headers: {
              'Content-Type': 'application/json'
            },
            body: JSON.stringify(data)
          })

          const json = await res.json();
          if (res.status === 200) {
            alert("User created successfully");
            window.location.reload();
          } else {
            alert(json.message);
            hideLoadingOverlay();
            return;
          }
    }

    function validateForm() {
        let password = document.getElementById("password").value;
        let confirm_password = document.getElementById("confirm_password").value;
        if (password !== confirm_password || password.length < 6) {
            if(password.length < 6){
                alert("Password must be 6 length or more");
            }else{
                alert("Password and Confirm Password do not match.");
            }
            return false;
        }
        return true;
    }
  
    async function EditNotification() {
      showLoadingOverlay();
        // Get form data
        let senderEmail = document.getElementsByName('sender_email')[0].value;
        let appPassword = document.getElementsByName('app_pass')[0].value;
        let receiverEmail = document.getElementsByName('receive_email')[0].value;

        // Prepare data for API
        let data = {
          sender_email: senderEmail,
          app_pass: appPassword,
          receive_email: receiverEmail
        };
        console.log(data);
        // Send data to API
        const res = await fetch('/notification', {
          method: 'POST',
          headers: {
            'Content-Type': 'application/json'
          },
          body: JSON.stringify(data)
        })

        if(res.status === 200){
          alert("Notification setting updated successfully");
          window.location.reload();
        }else{
          alert("Something went wrong");
          return;
        }
    }
  
    function NotificationPopup() {
      document.querySelector(".notification-popup").classList.add("open_popup");
      document.querySelector(".notification-popup").classList.remove("close_popup");
      overlay.style.display = "block";
    }
  </script>
