<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>About Us</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Inter:wght@900&display=swap" rel="stylesheet">
<script src="https://cdn.jsdelivr.net/npm/lightgallery@2.7.2/lightgallery.min.js"></script>
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/lightgallery@2.7.2/css/lightgallery-bundle.min.css">
<script src="https://cdnjs.cloudflare.com/ajax/libs/lightgallery/2.7.2/plugins/zoom/lg-zoom.min.js" integrity="sha512-BLW2Jrofiqm6m7JhkQDIh2olT0EBI58+hIL/AXWvo8gOXKmsNlU6myJyEkTy6rOAAZjn0032FRk8sl9RgXPYIQ==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/lightgallery/2.7.2/plugins/thumbnail/lg-thumbnail.min.js" integrity="sha512-VBbe8aA3uiK90EUKJnZ4iEs0lKXRhzaAXL8CIHWYReUwULzxkOSxlNixn41OLdX0R1KNP23/s76YPyeRhE6P+Q==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
<style>
    *{
        margin: 0px;
        padding: 0px;
    }
    .main_container{
        display: flex; width: 50%; height: 60%;
    }
    #left{
        position: relative; display: flex; justify-content: center; align-items: start; width: 50%;
    }
    .inner_left_left{
        bottom: 0px;  position: absolute; background-color: #616586; width: 100%; height: 60%;
    }
    .text{
        font-family: "Segoe UI", "Helvetica Neue", Helvetica, "Lucida Grande", Arial, Ubuntu, Cantarell, "Fira Sans", sans-serif;;
color: #616586;
    }
    .inline-gallery-container {
        width: 80%;
        min-height: 30%;
        padding-bottom: 65%;
        margin: auto;
    }
    @media (max-width: 927px) {
        .main_container{
            width: 90%;
        }
        .heading{
            font-size: 24px !important;
        }
    }
</style>
</head>

<body style="background-color: #7D90B4; width: 100%; height: 100%;">
<div style="display: flex; justify-content: center; align-items: center; background-color: #7D90B4; width: 100%; height: 100vh;">
    <div class="main_container">
        <div id="left">
            <div class="inner_left_left">

            </div>
            <div style="background-size: cover;background-position: center;  background-image: url(/<%=img_link%>); z-index: 1; height: 90%; width: 90%;" class="image_container">

            </div>
        </div>
        <div id="right"  style=" display: flex; justify-content: center; align-items: center; width: 50%; background-color: #fff;">
            <div style="min-height: 80%; min-width: 90%; margin: auto;">
                <p class="heading text" style="
                padding-left: 30px;
                margin-top: 35px;"><%=about_us.Title%></p>
                <h1 class="text heading" style="font-size: 46px; font-family: 'Inter', sans-serif; padding-left: 30px;"><%=about_us.Heading%></h1>
                <p class="text" style="padding-left: 30px; margin-top: 20px;"><%=about_us.Description%></p>
            </div>
        
        </div>
    </div>
    
</div>
<script>
    const profile_id = `<%=id%>`
    start();
    async function start(params) {
        const data = await fetchgalleryImages();
        if(data.length == 0){
            return;
        }
        document.getElementsByTagName("body")[0].innerHTML += `<div id="animated-thumbnails-gallery" class="inline-gallery-container"></div>`
        const container = document.getElementById("animated-thumbnails-gallery");
        container.innerHTML = "";
        data.forEach(elem=>{
            container.innerHTML += `<a href="/uploads/${profile_id}/gallery/${elem}">
                    <img style="object-fit: cover; width: 300px; height:200px" src="/uploads/${profile_id}/gallery/${elem}" />
                </a>`
        })


        lightGallery(document.getElementById('animated-thumbnails-gallery'), {
            thumbnail: true,
        });
    }

    async function fetchgalleryImages(){
        try {
            const res = await fetch(`/api/get/gallery/${profile_id}`);
            const data = await res.json();
            return data.images;
        } catch (error) {
            console.log(error.message);
            return []
            
        }
    }
    
</script>
</body>
</html>